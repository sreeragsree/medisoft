<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
    android:id="@+id/progress_view">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="8dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textSize="17sp"
        android:visibility="gone"
            android:background="@drawable/toast_view_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/progress_wheel_bg"
        android:orientation="vertical"
        android:gravity="center">


        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="#AA66CC"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_barWidth="2dp"/>
    </LinearLayout>

</RelativeLayout>
